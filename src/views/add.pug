doctype html
html
    head
        meta(charset="utf-8")
        title Book add
        link(rel='stylesheet', href='/src/style/add.css')
        link(rel="stylesheet", href='/src/font-awesome/css/font-awesome.min.css')
        link(rel="stylesheet", href='/src/style/w3.css')
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;500;700&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    body
        form.return(method="get", action=`/books/`)
            button(type="submit", class="w3-button w3-square")
                <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>

        form.add_form(method="post", action=`/books/add_action`, class="w3-container")
            div(class="w3-third")
                b Название:
                input(type="text", name="title", class="w3-input w3-border")
            div(class="w3-third")
                b Автор:
                input(type="text", name="author", class="w3-input w3-border")
            div(class="w3-third")
                b Год публикации:
                input(type="text", name="date_release", class="w3-input w3-border")
            div 
                button(type="submit", class="w3-button w3-square")
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
