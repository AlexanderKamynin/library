doctype html
html
    head
        meta(charset="utf-8")
        title Book add
        link(rel='stylesheet', href='/src/style/add.css')
    body
        form(method="get", action=`/books/`)
            button(type="submit")
                =`Вернуться`

        form(method="post", action=`/books/add_action`)
            p
                b Название:
                input(type="text", name="title")
            p
                b Автор:
                input(type="text", name="author")
            p 
                b Год публикации:
                input(type="text", name="date_release")
            div 
                input(type="submit", value="Добавить книгу")