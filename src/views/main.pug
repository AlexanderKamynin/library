doctype html
html
    head
        meta(charset="utf-8")
        title Library
        link(rel='stylesheet', href='/src/style/main.css')
    body
        header
            .header_name Библиотека
        div.buttons
            form(method="get", action="/books/add")
                button(type="submit")
                    =`Добавить книгу`
            form(method="get", action="/books/delete")
                button(type="submit")
                    =`Удалить книгу`
        div.books
            p 
                =`Список кринжек`
            ul
                each book in books
                    li
                        a(href="/books/" + book.id) 
                            =`${book.id}: ${book.author} . ${book.title}`