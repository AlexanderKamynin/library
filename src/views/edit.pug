doctype html
html
    head
        meta(charset="utf-8")
        title Book edit 
        link(rel='stylesheet', href='/src/style/edit.css')
    body
        div 
            form(method="get", action=`/books/${book.id}`)
                button(type="submit")
                    =`Вернуться`

            form(method="post", action=`/books/${book.id}/edit_action`)
                p
                    b Название:
                    input(type="text", name="title", placeholder=book.title)
                p
                    b Автор:
                    input(type="text", name="author", placeholder=book.author)
                p 
                    b Год публикации:
                    input(type="text", name="date_release", placeholder=book.date_release)
                div 
                    input(type="submit", value="Сохранить изменения")